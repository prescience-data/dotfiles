root = true

############################################################
# Global Defaults (EditorConfig Standard)
############################################################
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# IntelliJ / WebStorm: visual guides + safe defaults
ij_visual_guides = 80, 120, 200
ij_continuation_indent_size = 2

############################################################
# Markdown (tabs + no trailing trim; soft wrap ON)
############################################################
[*.md]
indent_style = tab
indent_size = 4
insert_final_newline = false
trim_trailing_whitespace = false

# IntelliJ Markdown formatting controls
ij_markdown_force_one_space_after_header_symbol = true
ij_markdown_max_lines_around_block_elements = 1
ij_markdown_min_lines_around_block_elements = 1
ij_markdown_max_lines_around_header = 1
ij_markdown_min_lines_around_header = 1
ij_markdown_max_lines_between_paragraphs = 1
ij_markdown_min_lines_between_paragraphs = 1

# IntelliJ: soft wrap in Markdown
ij_soft_wrap = true

############################################################
# Vue SFCs (soft wrap ON; keep 2-space indent)
############################################################
[*.vue]
indent_style = space
indent_size = 2

# IntelliJ: soft wrap in Vue
ij_soft_wrap = true

############################################################
# JavaScript / TypeScript (and related)
############################################################
[*.{js,jsx,ts,tsx,cjs,mjs,cts,mts}]
indent_size = 2

# IntelliJ code style preferences
ij_any_if_brace_force = always
ij_typescript_while_brace_force = always
ij_typescript_use_public_modifier = false

ij_typescript_import_merge_members = true
ij_typescript_jsdoc_include_types = true
ij_typescript_line_comment_add_space = true
ij_typescript_line_comment_at_first_column = true
ij_typescript_wrap_comments = true

# Common “missing/out-of-sync” IntelliJ TypeScript knobs
ij_typescript_use_semicolon_after_statement = true
ij_typescript_spaces_within_imports = false
ij_typescript_spaces_within_object_literal_braces = true

############################################################
# JSON & JSON-like
############################################################
[{*.json,*.jsonc,.prettierrc,.eslintrc,.stylelintrc,.babelrc,.madgerc,bowerrc,jest.config}]
indent_size = 2

ij_json_keep_blank_lines_in_code = 0
ij_json_keep_indents_on_empty_lines = false
ij_json_keep_line_breaks = true
ij_json_space_after_colon = true
ij_json_space_after_comma = true
ij_json_space_before_colon = false
ij_json_space_before_comma = false
ij_json_spaces_within_braces = true
ij_json_spaces_within_brackets = false
ij_json_wrap_long_lines = true

############################################################
# YAML
############################################################
[*.{yml,yaml}]
indent_size = 2

############################################################
# HTML / CSS / SCSS (common in Vue/Nuxt repos)
############################################################
[*.{html,css,scss,sass,less}]
indent_size = 2

############################################################
# Shell / Env
############################################################
[*.{sh,bash,zsh}]
indent_size = 2

[*.env]
indent_style = space
indent_size = 2
ij_any_wrap_long_lines = false
ij_wrap_on_typing = false

############################################################
# Makefiles (must be tabs)
############################################################
[Makefile]
indent_style = tab

############################################################
# Lockfiles & Generated Files (avoid churn)
############################################################
[{package-lock.json,yarn.lock,pnpm-lock.yaml}]
trim_trailing_whitespace = false
insert_final_newline = false

############################################################
# Ignore common minified artifacts (don’t “fix” them)
############################################################
[*.min.{js,css}]
insert_final_newline = false
trim_trailing_whitespace = false
